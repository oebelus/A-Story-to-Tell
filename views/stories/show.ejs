<%- include('../partials/links') %> 
<%- include('../partials/nav') %> 

<div class="container">

    <div class="row">
        <div class="col s12 m8">
            <h3 class="trainloss"><%- story.title %></h3>
            <div class="big-card card story">
                <div class="card-content">
                    <span class="card-title"><%- moment(story.createdAt).format('MMMM Do YYYY, h:mm:ss a') %></span>
                    <%- story.body %> 
                </div>
            </div>
        </div>
        <div class="col s12 m4">
            <div class="small-card card center-align">
                <div class="card-content">
                    <span class="card-title"><%- story.user.displayName %></span>
                </div>
                <div class="card-action">
                    <a class="userlink" href="user/<%-story.user._id%>">More From <%-story.user.firstName%></a>
                </div>
            </div>
        </div>
    </div>

</div>

<style>

    .trainloss {
        font-family: 'Satisfy', cursive;
        color: #7f5539;
    }

    .container {
        margin-top: 100px;
    }

    .big-card {
        border-radius: 20px;
    }

    .userlink {
        color: #7f5539 !important;
        font-weight: bold;
        position: relative;
        left: 20px;
    }

</style>